<Window x:Class="WPF_Stuff.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Stuff"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="MainGridPanel" VerticalAlignment="Bottom" Height="200">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <local:SingleRow x:Name="TheSingleRow" Grid.Row="1"></local:SingleRow>
        <Button x:Name="HighlightButton" Content="Highlight Column" HorizontalAlignment="Left" Margin="94,-36,0,0" VerticalAlignment="Top" Width="122" Click="button_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="23"/>
        <TextBox x:Name="ColumnIndexTextBox" HorizontalAlignment="Left" Height="23" Margin="14,-36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="75" PreviewTextInput="ColumnIndexTextBox_PreviewTextInput"/>
        <DatePicker x:Name="FridayPicker" HorizontalAlignment="Left" Margin="290,-88,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
